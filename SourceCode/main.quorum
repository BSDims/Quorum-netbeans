         bulletY = 3*counter
end

if monitor:IsKeyPressed(key:W)
plrshot:Play()
bullet:SetPosition(mainGuy:GetCenterX(),mainGuy:GetCenterY())
         bulletX = 3*counter
         bulletY = 28*counter
end

if monitor:IsKeyPressed(key:S)
plrshot:Play()
bullet:SetPosition(mainGuy:GetX(),mainGuy:GetY())
         bulletX = 3*counter
         bulletY = -28*counter
end

//default is 3 and 3
